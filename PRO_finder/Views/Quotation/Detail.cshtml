                        <!-- 顯示評價 (如果評價太多要有分頁)-->
                        <div class="comment-content" style="display:none;">
                            <h3 class="h5 d-flex align-items-center mb-4 text-primary">
                                <span class="icon-turned_in mr-3"></span>服務評價{{x}}則
                            </h3>
                            <div class="col-lg-8 mb-5">
                                <div class="pt-3">
                                    @if (Model == null)
                                    {
                                        <p>暫無評價</p>
                                    }
                                    else
                                    {
                                        <ul class="comment-list">
                                            <li class="comment">
                                                <div class="vcard bio">
                                                    <img src="./images/person_2.jpg" alt="Image placeholder">
                                                </div>
                                                <div class="comment-body">
                                                    <h3>Jacob Smith</h3>
                                                    <div class="meta">{{January 9, 2018 at 2:21pm}}</div>
                                                    <p>
                                                        Lorem ipsum dolor sit amet, consectetur adipisicing elit.
                                                    </p>
                                                    <p><a href="#" class="reply">Reply</a></p>
                                                </div>
                                            </li>
                                        </ul>
                                    }
                                </div>
                            </div>
                        </div>
                    </main>
                </section>
            </div>
        </div>
    </div>
</section>

@section topCSS
    {
    <style>
        .btn {
            border: none !important;
        }

        .author-social a {
            display: inline-block;
            width: 40px;
            height: 40px;
            position: relative;
            background: #89ba16;
            border-radius: 50%;
            text-decoration: none !important;
        }

            .author-social a > span {
                position: absolute;
                left: 50%;
                top: 50%;
                color: white;
                -webkit-transform: translate(-50%, -50%);
                transform: translate(-50%, -50%);
            }

            .author-social a:hover {
                background: white;
            }

                .author-social a:hover span {
                    color: #89ba16;
                }

        .left-down ul {
            padding: 0;
            list-style: none;
        }

        .fixedHeader #backwork {
            position: fixed;
            top: 0;
            left: 0;
        }

        .servicebtn div:hover {
            border-top: 2px solid #89ba16;
        }

            .servicebtn div:hover .btn:hover, .servicebtn div:hover .btn:focus {
                background: none;
            }

        .work ul {
            padding: 0;
            list-style: none;
        }

        .site-footer .scroll-top {
            position: absolute;
            z-index: 5;
            top: -30%;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: #89ba16;
            left: 95%;
            -webkit-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
            -webkit-box-shadow: 0 0px 10px 0px rgba(0, 0, 0, 0.1);
            box-shadow: 0 0px 10px 0px rgba(0, 0, 0, 0.1);
        }
    </style>
}

