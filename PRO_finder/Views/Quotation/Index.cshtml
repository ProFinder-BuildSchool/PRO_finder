    <script>
        let filtermodal = document.querySelector('.filtermodal');
        let html = document.querySelector('html');
        let side = document.getElementById('Sidenav');
        let AllCardArray = @Html.Raw(Json.Encode(ViewBag.pageData));
        let serchContain = document.querySelector('#serchContain').value;
        let card = document.querySelector('#templateCard');
        let subcatefilter = document.querySelector('.subcatefilter');

        let filterCard = [];
        let itemZone = document.querySelector('.item_zone');
        let subcateinput = document.querySelectorAll('.subcateinput');
        let locationinput = document.querySelectorAll('.locationinput');
        let serchValue = document.querySelector('.serchinput');
        let numberOfSubcateChecked = 0;
        let numberOfLocationChecked = 0;

        let reductionArr = [];


        window.onload = function () {
            var url = decodeURI(location.href);
            if (AllCardArray.length == 0) {
                itemZone.innerHTML = '<div class="text-primary mx-auto h5">抱歉，沒有符合的搜尋結果<p>';
            }

            if (url.indexOf('keyword') > -1)
            {
                subcatefilter.style.display = 'none';
            }
            console.log(AllCardArray)
            AddCategoryFilter();
            AddLocationFilter();

        }

        document.querySelector('.closefilter').addEventListener('click', function () {
            side.style.width = "0px";
            filtermodal.style.display = 'none';
            html.classList.remove('fixWindow');
        })
        document.querySelector('.hamfliterbtn').addEventListener('click', function () {
            side.style.width = "300px";
            side.style.transition = "5"

            filtermodal.style.display = 'block';
            html.classList.add('fixWindow');
        });

        $(".tab").each(function (index) {
            $(this).click(function (e) {
                triggletab();
                triigletabcontent();
                $(this).toggleClass("active");
                $(".tab-c")
                    .eq(index)
                    .toggleClass("active");
            });
        });
        //to remove all tab headers
        function triggletab() {
            $(".tab").each(function () {
                $(this).removeClass("active");
            });
        }

        //triggle the tab content
        function triigletabcontent() {
            $(".tab-c").each(function () {
                $(this).removeClass("active");
            });
        }


        function addcard() {
            filterCard.forEach(function (item, index) {
                let cloneContent = card.content.cloneNode(true);
                cloneContent.querySelector('h5').innerText = item.SubcategoryName;
                cloneContent.querySelector('img').src = item.Img;
                cloneContent.querySelector('.studioName').innerText = item.StudioName;
                cloneContent.querySelector('.price').innerText = item.Price;
                cloneContent.querySelector('.test1').innerText = `cate${item.CategoryId}`;
                cloneContent.querySelector('.test2').innerText = `sub${item.SubcategoryId}`;
                cloneContent.querySelector('.test3').innerText = `location${item.Location}`;
                itemZone.append(cloneContent);
            });
        }

        function AddCategoryFilter() {
            subcateinput.forEach(function (item, index) {
                item.addEventListener('change', function () {
                    if (this.checked) {
                        numberOfSubcateChecked++
                        filterCard = filterCard.concat(AllCardArray.filter(x => x.SubcategoryName.includes(item.value)));
/*                        console.log(filterCard);*/
                        reductionArr = filterCard;
                        console.log(reductionArr);
                    }

                    else {
                        numberOfSubcateChecked--;
                        filterCard = filterCard.filter(x => !x.SubcategoryName.includes(item.value));
/*                        console.log(filterCard);*/
                        reductionArr = filterCard;
                        console.log(reductionArr );
                    }

                    itemZone.innerText = '';
                    addcard();

                    if (numberOfSubcateChecked == 0) {
                        filterCard = AllCardArray;
                        itemZone.innerText = '';
                        addcard();
                        filterCard = [];
                        return;
                    }

                })
            })
        }

        function AddLocationFilter() {
            locationinput.forEach(function (item, index) {
                item.addEventListener('change', function () {
                    if (numberOfSubcateChecked != 0) {
                        if (this.checked) {
                            numberOfLocationChecked++
                            filterCard = filterCard.filter(x => x.Location == item.value);
                            //console.log(filterCard);
                            //console.log(item.value);
                            //console.log(reductionArr);
                        }
                        else {
                            numberOfLocationChecked--;
                            filterCard = reductionArr;
                            /*console.log(filterCard);*/
                            //console.log(reductionArr);
                        }
                    }

                    else {
                        if (this.checked) {
                            numberOfSubcateChecked++
                            filterCard = filterCard.concat(AllCardArray.filter(x => x.Location.includes(item.value)));
                            console.log(filterCard);
                            console.log(AllCardArray);
                            console.log(numberOfSubcateChecked);
                        }

                        else {
                            numberOfSubcateChecked--;
                            filterCard = filterCard.filter(x => !x.Location.includes(item.value));
                            console.log(filterCard);
                        }


                        if (numberOfSubcateChecked == 0) {
                            filterCard = AllCardArray;
                            itemZone.innerText = '';
                            addcard();
                            filterCard = [];
                            return;
                        }
                    }

                    itemZone.innerText = '';
                    addcard();
                })
            });
        }


