@section endJS{

    <script>
        let filtermodal = document.querySelector('.filtermodal');
        let html = document.querySelector('html');
        let side = document.getElementById('Sidenav');
        let AllCardArray = @Html.Raw(Json.Encode(ViewBag.pageData));
        let serchContain = document.querySelector('#serchContain').value;
        let card = document.querySelector('#templateCard');
        let subcatefilter = document.querySelector('.subcatefilter');

        let filterCard = AllCardArray;//copy
        let itemZone = document.querySelector('.item_zone');
        let subcateinput = document.querySelectorAll('.subcateinput');
        let locationinput = document.querySelectorAll('.locationinput');
        let serchValue = document.querySelector('.serchinput');
        let priceconfirmbtn = document.querySelectorAll('.confirmbtn');
        let clearbtn = document.querySelectorAll('.clearbtn');
        let priceArr = [];
        let subcateArr = [];
        let locationArr = [];

        let subcatIdArr = [];
        let locatIdArr = [];
        let IdArr = [];

        let minPrice = document.querySelector('.minPrice');
        let maxPrice = document.querySelector('.maxPrice');
        let RwdMinPrice = document.querySelector('.RwdMinPrice');
        let RwdMaxPrice = document.querySelector('.RwdMaxPrice');


        window.onload = function () {
            var url = decodeURI(location.href);


            if (url.indexOf('keyword') > -1) {
                subcatefilter.style.display = 'none';
            }
            console.log(AllCardArray)
            AddCategoryFilter();
            AddLocationFilter();

            pagination(AllCardArray, 1);

            if (AllCardArray.length == 0) {
                let div = document.createElement('div');
                div.classList.add('text-primary', 'mx-auto', 'h5');
                div.innerText = '抱歉，沒有符合的搜尋結果';
                itemZone.append(div);
            }
        }

        //RWD filter function
        function CloseRwdFilter() {
                side.style.width = "0px";
                filtermodal.style.display = 'none';
                html.classList.remove('fixWindow');
            };

        document.querySelector('.closefilter').addEventListener('click', function () {
            CloseRwdFilter();
        });

        document.querySelector('.hamfliterbtn').addEventListener('click', function () {
            side.style.width = "300px";
            side.style.transition = "5"

            filtermodal.style.display = 'block';
            html.classList.add('fixWindow');
        });

        $(".tab").each(function (index) {
            $(this).click(function (e) {
                triggletab();
                triigletabcontent();
                $(this).toggleClass("active");
                $(".tab-c")
                    .eq(index)
                    .toggleClass("active");
            });
        });
        //to remove all tab headers
        function triggletab() {
            $(".tab").each(function () {
                $(this).removeClass("active");
            });
        }

        //triggle the tab content
        function triigletabcontent() {
            $(".tab-c").each(function () {
                $(this).removeClass("active");
            });
        }


        function addcard(arr) {
            itemZone.innerText = '';
            arr.forEach(function (item, index) {
                let cloneContent = card.content.cloneNode(true);
                cloneContent.querySelector('h5').innerText = item.SubcategoryName;
                cloneContent.querySelector('img').src = item.Img;
                cloneContent.querySelector('.studioName').innerText = item.StudioName;
                cloneContent.querySelector('.price').innerText = item.Price;
                cloneContent.querySelector('.test1').innerText = `cate${item.CategoryId}`;
                cloneContent.querySelector('.test2').innerText = `sub${item.SubcategoryId}`;
                cloneContent.querySelector('.test3').innerText = `location${item.Location}`;
                cloneContent.querySelector('.test4').innerText = `QuotationId${item.QuotationId}`;
                itemZone.append(cloneContent);
            });
        }

        //Subcategory filter
        function AddCategoryFilter() {
            subcateinput.forEach(function (item, index) {
                item.addEventListener('change', function (e) {
                    subcateArr = []
                    subcatIdArr = []
                    subcateinput.forEach(x => {
                        if (x.checked) {
                            subcateArr.push(x.value)
                            subcatIdArr.push(x.getAttribute('data-subId'))
                        }

                    })
                    filterByAll(priceArr, subcateArr, locationArr)
                })
            })
        }
       
        //Location filter
        function AddLocationFilter() {
            locationinput.forEach(function (item, index) {
                item.addEventListener('change', function () {
                    locationArr = []
                    locatIdArr=[]
                    locationinput.forEach(x => {
                        if (x.checked) {
                            locationArr.push(x.value)
                            locatIdArr.push(x.getAttribute('data-locatId'))
                        }
                    })
                    filterByAll(priceArr, subcateArr, locationArr)
                })
            })
        }

        //all conditions filter
        function filterByAll(price, subcategory, loction) {
            if (price.length == 0) { price = AllCardArray }
            let OptionOne = [];
            let OptionTwo = [];
            if (subcategory.length == 0) {
                OptionOne = price
            }
            else {
                for (let i = 0; i < subcategory.length; i++) {
                    OptionOne = OptionOne.concat(price.filter(item => item.SubcategoryName == subcategory[i]));
                }
            }


            if (loction.length == 0) {
                OptionTwo = OptionOne
            }
            else {
                for (let i = 0; i < loction.length; i++) {
                    OptionTwo = OptionTwo.concat(OptionOne.filter(item => item.Location == loction[i]));
                    }

            }

            filterCard = OptionTwo;            IdArr = locatIdArr.concat(subcatIdArr);            console.log(IdArr);            if (IdArr.length == 0) {                window.history.replaceState({}, 0, "Index?");
            }            else {                window.history.replaceState({}, 0, "Index?filter=" + `${IdArr}`);
            }                        pagination(filterCard, 1)

        }

       //search btn
        document.querySelector('.serchtbtn').addEventListener('click', function () {
            location.href = "Index?keyword=" + `${serchValue.value}`;
        });


        //Price filter
        priceconfirmbtn.forEach(function (item, index) {
            item.addEventListener('click', function () {

                if (minPrice.value != "") {
                    priceArr = filterCard.filter(x => Number(x.Price) >= Number(minPrice.value) && Number(x.Price) <= Number(maxPrice.value))
                    filterCard = priceArr;
                }
                else if (RwdMinPrice.value != "") {
                    priceArr = filterCard.filter(x => Number(x.Price) >= Number(RwdMinPrice.value) && Number(x.Price) <= Number(RwdMaxPrice.value))
                    filterCard = priceArr;
                }

                CloseRwdFilter();

                pagination(filterCard, 1);
            })
        })

        //clear all btn
        clearbtn.forEach(function (item) {
            item.addEventListener('click', function () {

                subcateinput.forEach(function (item) {
                    item.checked = false
                });
                locationinput.forEach(function (item) {
                    item.checked = false
                });

                minPrice.value = "";
                maxPrice.value = "";
                RwdMinPrice.value = "";
                RwdMaxPrice.value = "";

                filterCard = AllCardArray;
                subcateArr = [];
                locationArr = [];
                priceArr = [];
                CloseRwdFilter();
                window.history.replaceState({}, 0, "Index?");
                pagination(filterCard, 1);
            });
        });


        //Pagination
        function pagination(AllData, nowPage) {
            const dataTotal = AllData.length;
            const perPageCount = 12;

            //Count the number of pages
            const pageTotal = Math.ceil(dataTotal / perPageCount);
            let currentPage = nowPage;

            if (currentPage > pageTotal) {
                currentPage = pageTotal;
            }

            const minData = (currentPage * perPageCount) - perPageCount + 1;
            const maxData = (currentPage * perPageCount);

            const data = [];
            AllData.forEach((item, index) => {
                const num = index + 1;
                if (num >= minData && num <= maxData) {
                    data.push(item);
                }
            })

            // 用物件方式來傳遞資料
            const page = {
                pageTotal,
                currentPage,
                hasPage: currentPage > 1,
                hasNext: currentPage < pageTotal,
            }
            addcard(data);
            pageBtn(page);

        }

        let pagediv = document.querySelectorAll('.pagediv');
        let pagebottom = document.querySelector('.pagebottom');
        let pagezone = document.querySelector('.pagezone');

         
        //pageBtn
        function pageBtn(page) {
            let prenext = '';
            const total = page.pageTotal;

            if (page.hasPage) {
                prenext += `<li><a href="#" class="prev page-link" data-page="${Number(page.currentPage) - 1}">Prev</a></li>`; 
            }
            else {
                prenext += `<li class="page-item disabled"><a href="#" class="prev page-link">Prev</a></li>`;
            }


            for (let i = 1; i <= total; i++) {
                if (Number(page.currentPage) === i) {
                    prenext += `<li><a href="#" class="active page-link" data-page="${i}">${i}</a></li> `;
                } else {
                    prenext += `<li><a href="#" class="page-link" data-page="${i}">${i}</a></li>`;
                }
            };

            if (page.hasNext) {
                prenext += `<li><a href="#" class="next page-link" data-page="${Number(page.currentPage) + 1}">Next</a></li>`; 
            } else {
                prenext += `<li class="page-item disabled"><a href="#" class="next page-link">Next</a></li>`;
            }


            pagediv.forEach(function (item) {
                item.innerHTML = prenext;
            })
        }


        function switchPage(e,arr) {
            e.preventDefault();
            if (e.target.nodeName !== 'A') return;
            const page = e.target.dataset.page;
            pagination(arr, page);
        }

        pagediv.forEach(function (item) {
            item.addEventListener('click', function (e) {
                switchPage(e, filterCard);
            });
        });
            



        //Sort by price
        let sortPrice = false;
        document.querySelector('.priceSortBtn').addEventListener('click', function () {
            sortPrice = !sortPrice
            if (sortPrice) {
                filterCard.sort(function (a, b) { return b.Price - a.Price })
                document.querySelector('.priceTop').classList.add('changecolor');
                document.querySelector('.priceLow').classList.remove('changecolor');
            }
            else {
                filterCard.sort(function (a, b) { return a.Price - b.Price })
                document.querySelector('.priceLow').classList.add('changecolor');
                document.querySelector('.priceTop').classList.remove('changecolor');
            }
            pagination(filterCard, 1);
        })
        
        //Sort function
        function SortNumber(sortNumber) {
            filterCard.sort(function (a, b) { return b.sortNumber - a.sortNumber })
        }

        document.querySelector('.orderNumberBtn').addEventListener('click', function(){
            SortNumber(sortNumber)
        });
    </script>
}