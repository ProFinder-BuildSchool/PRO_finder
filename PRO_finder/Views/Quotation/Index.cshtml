<section class="site-section">
    <div class="container">
        <div class="row pagination-wrap">
            <div class="col-md-12 categoriedpage">
                <h1>平面設計-服務報價</h1>
                <div class="mb-3 pagediv d-flex">

                </div>
                <button type="button" class="hamfliterbtn"><i class="fas fa-filter"></i> 篩選</button>
                <div class="filtermodal">
                    <div id="Sidenav" class="sidenav">
                        <button class="closefilter">X</button>
                        <div class="rwdFilterMenu mr-3 tabs-pages">
                            <div class="tab active">類別</div>
                            <div class="tab">地點</div>
                            <div class="tab">價錢</div>
                        </div>
                        <div class="tabs-contents">
                            <div class="tab-c active">
                                <div class="list-unstyled block__47528 rwdcategory">
                                    @foreach (var item in ViewBag.cateNameList)
                                    {
                                        <label><input type="checkbox" class="subcateinput" value="@item.SubCategoryName" data-subId="@item.SubCategoryID"> <span>@item.SubCategoryName</span></label>
                                    }
                                </div>
                            </div>
                            <div class="tab-c">
                                <div class="list-unstyled block__47528 rwdlocation">
                                    @foreach (var item in ViewBag.LocationList)
                                    {
                                        <label><input type="checkbox" class="locationinput" value="@item.LocationName" data-locatId="@(item.LocationID+1000)"> <span>@item.LocationName </span></label>
                                    }
                                </div>
                            </div>
                            <div class="tab-c">
                                <div class="list-unstyled block__47528 rwdprice">
                                    <span class="textprice">
                                        <i>$</i>
                                        <input type="text" placeholder="最小金額" value="" class="RwdMinPrice" oninput="value=value.replace(/[^\d]/g,'')">
                                    </span>
                                    <div class="text-center h3 mt-2">∣</div>
                                    <span class="textprice">
                                        <i>$</i>
                                        <input type="text" placeholder="最大金額" value="" class="RwdMaxPrice" oninput="value=value.replace(/[^\d]/g,'')">
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="filterbtn">
                            <button class="clearbtn">清除</button>
                            <button class="confirmbtn">確認</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mb-5">
            <div class="col-lg-3 col-md-3 hamburgerfilter">
                <div class="selectList mb-2 subcatefilter">
                    <div class="CategoryName">
                        <p>服務類別</p>
                    </div>
                    <div class="border p-4 rounded serviceCategory">
                        <div class="list-unstyled block__47528">
                            @foreach (var item in ViewBag.cateNameList)
                            {
                                <label><input type="checkbox" class="subcateinput" value="@item.SubCategoryName" data-subId="@item.SubCategoryID"> <span>@item.SubCategoryName</span></label>
                            }
                        </div>
                    </div>
                </div>
                <div class="selectList mb-2">
                    <div class="CategoryName">
                        <p>服務地點</p>
                    </div>
                    <div class="border p-4 rounded serviceCategory">
                        <div class="list-unstyled block__47528">
                            @foreach (var item in ViewBag.LocationList)
                            {
                                <label><input type="checkbox" class="locationinput" value="@item.LocationName" data-locatId="@(item.LocationID+1000)"> <span>@item.LocationName </span></label>
                            }
                        </div>
                    </div>
                </div>
                <div class="selectList mb-2">
                    <div class="CategoryName">
                        <p>服務價格</p>
                    </div>
                    <div class="border p-4 rounded">
                        <div class="list-unstyled block__47528 pricefilter">
                            <span class="textprice">
                                <i>$</i>
                                <input type="text" placeholder="最小金額" value="" class="minPrice" oninput="value=value.replace(/[^\d]/g,'')">
                            </span>
                            <div class="text-center h3 mt-2">∣</div>
                            <span class="textprice">
                                <i>$</i>
                                <input type="text" placeholder="最大金額" value="" class="maxPrice" oninput="value=value.replace(/[^\d]/g,'')">
                            </span>
                            <button class="priceconfirm confirmbtn">確認</button>
                            <button class="clearfilter clearbtn">清除</button>
                        </div>
                    </div>
                </div>
            </div>

            @*tab filter*@
        <div class="col-lg-9 col-md-12 ">
            <div class="most__search__tab mb-3">
                <ul class="nav nav-tabs text-right" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active priceSortBtn" data-toggle="tab" href="#tabs-1" role="tab">
                            價格
                            <span class="priceTop">↑</span>
                            <span class="priceLow">↓</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link orderNumberBtn" data-toggle="tab" href="#tabs-2" role="tab">
                            訂購數
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link evaluationNumberBtn" data-toggle="tab" href="#tabs-3" role="tab">
                            評價
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link newBtn" data-toggle="tab" href="#tabs-3" role="tab">
                            最新
                        </a>
                    </li>
                </ul>
            </div>

            <div class="row item_zone mb-5">
                @if (ViewBag.pageData != null)
                {
                    foreach (var item in ViewBag.pageData)
                    {
                        <div class="col-lg-3 col-md-6">
                            <div class="listing__item">
                                <div class="listing__item__pic">
                                    <a href="@Url.Action("Detail", "Quotation")" target="_blank"><img src="@item.Img" alt="Image" class="img-fluid rounded"></a>
                                </div>
                                <div class="listing__item__text">
                                    <div class="listing__item__text__inside">
                                        <h5>@item.SubcategoryName</h5>
                                        <span class="price">@item.Price</span><span>/ 件</span>
                                        <div class="listing__item__text__rating">
                                            <div class="listing__item__rating__star mr-2">
                                                <span class="icon_star"></span>
                                                <span class="icon_star"></span>
                                                <span class="icon_star"></span>
                                                <span class="icon_star"></span>
                                                <span class="icon_star-half_alt"></span>
                                            </div>
                                            <span></span><span>人訂購</span>
                                        </div>
                                        <div class="mb-2">
                                            <a class="studioName" href="@Url.Action("Detail", "Quotation")" target="_blank">@item.StudioName</a> <br>
                                            <span class="pic_tag">CategoryId： @item.CategoryId</span>
                                            <span class="pic_tag">SubcategoryId： @item.SubcategoryId</span>
                                            <span class="pic_tag">Location： @item.Location</span>
                                            <span class="pic_tag">QuotationId： @item.QuotationId</span>
                                        </div>
                                    </div>
                                    <div class="listing__item__text__info">
                                        <a class="listing__item__text__info__right" href="@Url.Action("Detail", "Quotation")" target="_blank">服務詳情</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }


                <template id="templateCard">
                    <div class="col-lg-3 col-md-6">
                        <div class="listing__item">
                            <div class="listing__item__pic">
                                <a href="" target="_blank"><img src="" alt="Image" class="img-fluid rounded"></a>
                            </div>
                            <div class="listing__item__text">
                                <div class="listing__item__text__inside">
                                    <h5></h5>
                                    <span class="price"></span><span>/ 件</span>
                                    <div class="listing__item__text__rating">
                                        <div class="listing__item__rating__star mr-2">
                                            <span class="icon_star"></span>
                                            <span class="icon_star"></span>
                                            <span class="icon_star"></span>
                                            <span class="icon_star"></span>
                                            <span class="icon_star-half_alt"></span>
                                        </div>
                                        <span></span><span>人訂購</span>
                                    </div>
                                    <div class="mb-2">
                                        <a class="studioName" href="" target="_blank"></a> <br>
                                        <span class="pic_tag test1"></span>
                                        <span class="pic_tag test2"></span>
                                        <span class="pic_tag test3"></span>
                                        <span class="pic_tag test4"></span>
                                    </div>
                                </div>
                                <div class="listing__item__text__info">
                                    <a class="listing__item__text__info__right" href="@Url.Action("Detail", "Quotation")" target="_blank">服務詳情</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </template>

            </div>

            
            <div class="row pagination-wrap mt-3">
            <div class="col-md-12 pagediv d-flex justify-content-end">
                <div class="custom-pagination ml-auto">

                </div>
            </div>
        </div>
        </div>
        </div>
    </div>
</section>

