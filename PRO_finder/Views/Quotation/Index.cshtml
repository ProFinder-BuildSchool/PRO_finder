                        <p>服務類別</p>
                    </div>
                    <div class="border p-4 rounded serviceCategory">
                        <div class="list-unstyled block__47528">
                            @foreach (var item in ViewBag.cateNameList)
                            {
                                <label><input type="checkbox" class="subcateinput" value="@item.SubCategoryName"> <span>@item.SubCategoryName</span></label>
                            }
                        </div>
                    </div>
                </div>
                <div class="selectList mb-2">
                    <div class="CategoryName">
                        <p>服務地點</p>
                    </div>
                    <div class="border p-4 rounded serviceCategory">
                        <div class="list-unstyled block__47528">
                            @foreach (var item in ViewBag.LocationList)
                            {
                                <label><input type="checkbox" class="locationinput" value="@item.LocationName"> <span>@item.LocationName </span></label>
                            }
                        </div>
                    </div>
                </div>
