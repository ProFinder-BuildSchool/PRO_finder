
@{
    ViewBag.Title = "PaymentTest";
}

<h2>PaymentTest</h2>
<form id="app">
    <label for="Name" class="control-label">商品名稱</label>
    <input type="text" id="Name" class="form-control" v-model="details.name" />
    <label for="Amount" class="control-label">交易金額</label>
    <input type="text" id="Amount" class="form-control" v-model="details.amount" />
</form>
<button id="submit" @@click="send">結帳</button>
@section endJS
    {
    <script src="https://cdn.jsdelivr.net/npm/vue@2.6.14"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script>
        let app = new Vue({
            el: "#app",
            data: {
                details: {
                    name: "",
                    amount: 0
                }
            },
            methods: {
                send: function () {
                    axios.post("/api/Cart/PostECPayment", details).then(res => console.log(res));
                }
            }
        });
    </script>
    
}

