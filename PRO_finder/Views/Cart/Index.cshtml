@section endJS{
    <script>

        let count = 0;
        let countNumber = document.querySelector('.count');
        document.querySelector('.minuscount').addEventListener('click', function () {
            if (count != 0) {
                count--
                countNumber.innerText = count;
                console.log(count)
                countNumber.innerText = count;
            }
        })
        document.querySelector('.pluscount').addEventListener('click', function () {
            count++
            countNumber.innerText = count;
            console.log(count)
            countNumber.innerText = count;
        })


    </script>

}

