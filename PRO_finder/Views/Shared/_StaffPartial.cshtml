    const saveStaffBtn = document.getElementById('saveStaff');
    const contactStaffBtn = document.getElementById('contactStaff');

    function SaveStaff() {

        //存我的最愛<人才>資料
    }


    function ShowStaffContact(e) {
        //顯示訊息視窗

        //存訊息<案主聯絡人才>資料
    }

    window.onload = function () {
        saveStaffBtn.addEventListener('click', SaveStaff);
        contactStaffBtn.addEventListener('click', ShowStaffContact);
    }

</script>
